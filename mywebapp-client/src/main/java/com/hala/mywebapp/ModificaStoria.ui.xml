<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:VerticalPanel ui:field="MSPanel" spacing="20">
        <g:Label ui:field="labelIniziale"></g:Label>
        <g:Label ui:field="labelSelezionaScenario">Seleziona lo scenario da modificare:</g:Label>
        <g:ListBox ui:field="elencoScenari"></g:ListBox>
        <g:Label ui:field="labelInformazioniScenario">Informazioni relative allo scenario selezionato:</g:Label>
        <g:ListBox ui:field="informazioniScenario"></g:ListBox>
        <g:Label ui:field="labelModificaTesto">Inserisci nuovo testo per lo scenario:</g:Label>
        <g:TextBox ui:field="testoModificato"></g:TextBox>
        <g:Label ui:field="labelModificaDomanda"></g:Label>
        <g:TextBox ui:field="domandaModificata"></g:TextBox>
        <g:Label ui:field="labelSceltaOpzioni">Scegli l'opzione da modificare:</g:Label>
        <g:ListBox ui:field="sceltaOpzioni"></g:ListBox>
        <g:Label ui:field="labelModificaRisposta"></g:Label>
        <g:TextBox ui:field="rispostaModificata"></g:TextBox>
        <g:Button ui:field="modificaButton">Modifica scenario</g:Button>
        <g:Label ui:field="message"></g:Label>
        <g:Button ui:field="backButton">Torna indietro</g:Button>
    </g:VerticalPanel>
</ui:UiBinder>