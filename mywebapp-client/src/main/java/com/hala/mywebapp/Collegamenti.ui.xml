<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">



    <g:HorizontalPanel spacing="0" ui:field="totale">


        <g:VerticalPanel spacing="50" ui:field="pagina">
        
            <g:VerticalPanel spacing="10" ui:field="ScenarioInizialePanel">
                <g:Label ui:field="LscenarioIniziale">Scegli lo scenario iniziale:</g:Label>
                <g:ListBox ui:field="listaScenari"></g:ListBox>
                <g:Button ui:field="buttonSettaScenarioIniziale">Setta scenario iniziale</g:Button>
                
            </g:VerticalPanel>


            <g:VerticalPanel spacing="10" ui:field="ScenariDaCollegare">
                    <g:Label ui:field="SelezionaScenario1">Seleziona lo scenario che vuoi collegare:</g:Label>
                    <g:ListBox ui:field="menuScenari"></g:ListBox>
            </g:VerticalPanel>
            
            <g:VerticalPanel spacing="10" ui:field="gestioneIndovinello">
                <g:Label ui:field="labelGestioneIndovinello">Seleziona l'opzione a cui vuoi collegare l'indovinello:</g:Label>
                <g:ListBox ui:field="menuIndovinelli">
                    <g:item>Risposta sbagliata</g:item>
                    <g:item>Risposta corretta</g:item>
                    
                </g:ListBox>
                <g:Button ui:field="settaSuccessivoIndovinello">Setta come successivo</g:Button>
               
            </g:VerticalPanel>

            <g:VerticalPanel spacing="10" ui:field="gestioneScelte">
                <g:Label ui:field="labelGestioneScelte">Seleziona l'opzione a cui vuoi collegare:</g:Label>
                <g:ListBox ui:field="menuScelte"></g:ListBox>
                <g:Button ui:field="settaSuccessivoAScelta">Setta come successivo</g:Button>
                
            </g:VerticalPanel>

            <g:VerticalPanel spacing="10" ui:field="gestioneFinale">
                <g:Button ui:field="settaSuccessivoFinale">Setta come successivo</g:Button>
            </g:VerticalPanel>

            

            <g:VerticalPanel spacing="10" ui:field="CollegamentiPanel">
                
                <g:Label>Seleziona lo scenario con cui vuoi effettuare il collegamento:</g:Label>
                <g:Label ui:field="testoScenarioDaCollegare"/>
                <g:ListBox ui:field="menuScenariCollegamenti"></g:ListBox>
                
                
            </g:VerticalPanel>

        
            <g:Label ui:field="messageLabel"></g:Label>
        
        </g:VerticalPanel>

        

            <g:Button ui:field="terminaButton">Termina</g:Button>
            <g:Button ui:field="backButton">Back</g:Button>
</g:HorizontalPanel>
</ui:UiBinder>
