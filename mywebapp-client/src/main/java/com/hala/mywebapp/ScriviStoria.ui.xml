<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>

    </ui:style>


    <g:HorizontalPanel spacing="100">
        <g:VerticalPanel spacing="30" ui:field="titoloS">
            <g:Label>Scrivi il titolo della storia:</g:Label>
            <g:TextBox ui:field="titoloStoria"/>
            <g:Button ui:field="inserisciStoria">Crea</g:Button>
            <g:Label ui:field="messageLabelCreate"></g:Label>
        </g:VerticalPanel>

        <g:VerticalPanel spacing="30" ui:field="vpScenario">
            <g:Label ui:field="scriviScenarioLabel">Scrivi lo scenario:</g:Label>
            <g:Label ui:field="tipologiaLabel">Che tipologia di scenario vuoi inserire?</g:Label>
            <g:ListBox ui:field="menuTipoScenario">
                <g:item>Scenario a scelta</g:item>
                <g:item>Scenario con indovinello</g:item>             
           </g:ListBox>
        
            <g:Label ui:field="labelTestoScenario">Inserisci testo scenario:</g:Label>
            <g:TextBox ui:field="testoScenarioField"/>

            <g:Label ui:field="labelDomandaAScelta">Inserisci domanda per il cambio di scenario:</g:Label>
            <g:TextBox ui:field="domandaFieldAScelta"/>
            <g:Label ui:field="labelScelta">Inserisci opzione scelta:</g:Label>
            <g:TextBox ui:field="scelta"/>
            <g:Label ui:field="labelSceltaOggetto">Inserisci oggetto (se necessario):</g:Label>
            <g:TextBox ui:field="oggetto"/>
            <g:Button ui:field="altraScelta">Aggiungi scelta</g:Button>
            <g:Button ui:field="creaScenarioAScelta">Crea</g:Button>

            <g:Label ui:field="labelDomandaIndovinello">Inserisci l'indovinello per il cambio di scenario:</g:Label>
            <g:TextBox ui:field="domandaFieldIndovinello"/>
            <g:Label ui:field="labelRispostaIndovinello">Inserisci risposta corretta:</g:Label>
            <g:TextBox ui:field="rispostaFieldIndovinello"/>
            <g:Button ui:field="creaScenarioIndovinello">Crea</g:Button>


            <g:Label ui:field="message"></g:Label>
            <g:Label ui:field="message2"></g:Label>
        </g:VerticalPanel>
        
        
        <g:Label ui:field="messageLabel"/>
        <g:Button ui:field="backButton">Back</g:Button>
        <g:Button ui:field="creaCollegamenti">Crea collegamenti</g:Button>
    </g:HorizontalPanel>
</ui:UiBinder>
