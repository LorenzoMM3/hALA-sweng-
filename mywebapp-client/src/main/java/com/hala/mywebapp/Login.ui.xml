<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
             

    <g:VerticalPanel ui:field="loginPanel" spacing="10">
        <g:Label ui:field="usernameLabel">Username:</g:Label>
        <g:TextBox ui:field="usernameField"/>
        <g:Label ui:field="passwordLabel">Password:</g:Label>
        <g:TextBox ui:field="passwordField"/>
        <g:Button ui:field="loginButton">Login</g:Button>
        <g:Button ui:field="backButton">Back</g:Button>
        <g:Label ui:field="messageLabel"/>
    </g:VerticalPanel>
</ui:UiBinder>