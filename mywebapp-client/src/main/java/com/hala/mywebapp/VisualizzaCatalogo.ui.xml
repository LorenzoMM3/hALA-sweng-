<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">


    <g:VerticalPanel>
        <c:CellTable ui:field="tabella" width="100%" height="100%"/>

        <g:HorizontalPanel>
            <g:Button ui:field="backButton">Back</g:Button>
            <g:TextBox ui:field="nomeRicerca"></g:TextBox>
            <g:Button ui:field="ricerca">Ricerca</g:Button>
            <g:Button ui:field="resettaRicerca">Reset Ricerca</g:Button>
            <g:ListBox ui:field="filtroListBox">
                <g:item value="nome">Nome Storia</g:item>
                <g:item value="autore">Autore Storia</g:item>
                <g:item value="lunghezza">Lunghezza Storia</g:item>
            </g:ListBox>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>