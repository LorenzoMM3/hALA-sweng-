<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">


    <g:HTMLPanel ui:field="pagina">
    <div id="bottoni">
        <g:VerticalPanel spacing="30" ui:field="totale">
            <g:VerticalPanel spacing="6" ui:field="descrizione">
                <g:Label ui:field="desc1">Benvenuto nel nostro mondo di avventure interattive!</g:Label>
                <g:Label ui:field="desc2">Qui potrai scrivere e giocare a storie coinvolgenti, prendendo decisioni che influenzeranno il corso degli eventi. </g:Label> 
            </g:VerticalPanel>
            <g:VerticalPanel spacing="8" ui:field="bottoniPanel">
            <g:HorizontalPanel spacing="6" ui:field="bottoncini">
                <g:Button ui:field="signinButton" text="Registrati"/>
                <g:Button ui:field="loginButton" text="Accedi"/>                
            </g:HorizontalPanel>
            <g:Button ui:field="visualizzaCatalogoButton" text="Visualizza il catalogo delle storie"/>
            </g:VerticalPanel>
        </g:VerticalPanel>
    </div>
</g:HTMLPanel>

</ui:UiBinder>
